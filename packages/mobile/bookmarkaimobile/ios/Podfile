# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.0'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'BookmarkAI' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # Enable New Architecture for RN 0.79
    :hermes_enabled => true,
    :fabric_enabled => true,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # Standard React Native post install for 0.79
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
    
    # Fix deployment targets and compatibility issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Ensure minimum deployment target for RN 0.79
        if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 15.0
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
        end
        
        # Fix Swift version for New Architecture compatibility
        config.build_settings['SWIFT_VERSION'] = '5.0'
        
        # Fix glog deprecation warnings
        if target.name == 'glog'
          config.build_settings['GCC_WARN_DEPRECATED_FUNCTIONS'] = 'NO'
          config.build_settings['CLANG_WARN_DEPRECATED_DECLARATIONS'] = 'NO'
          config.build_settings['WARNING_CFLAGS'] = '-Wno-deprecated-declarations'
        end
        
        # New Architecture compatibility fixes
        if target.name.include?('React') || target.name == 'ReactCommon'
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = [
            '$(inherited)',
            '-DFOLLY_NO_CONFIG',
            '-DFOLLY_MOBILE=1',
            '-DFOLLY_USE_LIBCPP=1',
            '-DFOLLY_CFG_NO_COROUTINES=1'
          ]
        end

        # Enable strict concurrency for Swift 6 preparation
        config.build_settings['SWIFT_STRICT_CONCURRENCY'] = 'minimal'
      end
    end
  end
end