{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --config jest.unit.config.js",
    "test:contracts:verify": "jest --config jest.contract.config.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node --transpile-only src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:test": "NODE_ENV=test nest start",
    "generate:types": "openapi-generator-cli generate -i ../../apps/api/openapi.yaml -g typescript-axios -o ./src/generated/api --additional-properties=supportsES6=true,npmName=@bookmarkai/api-types,npmVersion=1.0.0",
    "generate:kotlin": "openapi-generator-cli generate -i ../../apps/api/openapi.yaml -g kotlin -o ../../android/app/src/main/java/com/bookmarkai/generated --additional-properties=packageName=com.bookmarkai.generated",
    "generate:swift": "openapi-generator-cli generate -i ../../apps/api/openapi.yaml -g swift5 -o ../../ios/BookmarkAI/Generated --additional-properties=projectName=BookmarkAIAPI,responseAs=Result",
    "generate:all": "npm run generate:types && npm run generate:kotlin && npm run generate:swift"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@aws-sdk/client-kms": "^3.812.0",
    "@aws-sdk/client-s3": "^3.812.0",
    "@aws-sdk/client-ses": "^3.812.0",
    "@aws-sdk/s3-request-presigner": "^3.812.0",
    "@bull-board/api": "^5.23.0",
    "@bull-board/express": "^5.23.0",
    "@bull-board/fastify": "^6.9.6",
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.1.1",
    "@nestjs/bull": "^10.1.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/core": "^11.1.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.1",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.4",
    "@types/amqplib": "0.10.7",
    "amqplib": "0.10.8",
    "argon2": "^0.40.3",
    "axios": "^1.9.0",
    "bull": "^4.15.0",
    "cheerio": "1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.3",
    "ioredis": "^5.6.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
