{
  "name": "bookmarkai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ts-prune": "ts-prune -p .",
    "prepare": "husky install",
    "dev:webext": "pnpm --filter @bookmarkai/extension dev",
    "build:webext": "pnpm --filter @bookmarkai/extension build",
    "test:webext": "pnpm --filter @bookmarkai/extension test",
    "seed:build": "tsc -p scripts/tsconfig.json",
    "seed": "npm run seed:build && node scripts/dist/seed/index.js",
    "seed:users": "npm run seed:build && node scripts/dist/seed/index.js --users",
    "seed:shares": "npm run seed:build && node scripts/dist/seed/index.js --shares",
    "seed:transcripts": "npm run seed:build && node scripts/dist/seed/index.js --transcripts",
    "seed:embeddings": "npm run seed:build && node scripts/dist/seed/index.js --embeddings",
    "seed:verify": "npm run seed:build && node scripts/dist/seed/verify.js",
    "seed:all": "npm run seed:build && node scripts/dist/seed/index.js --all",
    "seed:ci": "npm run seed:build && NODE_ENV=ci node scripts/dist/seed/ci.js",
    "seed:ci:local": "npm run seed:build && NODE_ENV=ci-local node scripts/dist/seed/ci.js",
    "seed:clean": "npm run seed:build && CLEAN_SEED=true node scripts/dist/seed/ci.js",
    "dev:tunnel": "node scripts/setup-ngrok.js",
    "install:all": "pnpm install",
    "build:all": "pnpm -r build",
    "test:all": "pnpm -r test",
    "lint:all": "pnpm -r lint",
    "typecheck:all": "pnpm -r typecheck",
    "dev:api": "pnpm --filter api-gateway start:dev",
    "dev:mobile": "pnpm --filter @bookmarkai/mobile start",
    "dev:extension": "pnpm --filter @bookmarkai/extension dev",
    "dev:sdk": "pnpm --filter @bookmarkai/sdk dev",
    "build:extension": "pnpm --filter @bookmarkai/extension build",
    "build:sdk": "pnpm --filter @bookmarkai/sdk build",
    "db:generate": "pnpm --filter api-gateway db:generate",
    "db:migrate": "pnpm --filter api-gateway db:migrate",
    "mobile:ios": "pnpm --filter @bookmarkai/mobile ios",
    "mobile:android": "pnpm --filter @bookmarkai/mobile android",
    "mobile:metro": "pnpm --filter @bookmarkai/mobile start",
    "deps:check": "pnpm -r outdated",
    "deps:update": "pnpm -r update",
    "deps:audit": "pnpm audit"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/config": "4.0.2",
    "@types/amqplib": "^0.10.7",
    "amqplib": "^0.10.8",
    "dotenv": "^16.4.5",
    "ioredis": "^5.6.1",
    "jwt-decode": "4.0.0",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chalk": "^4.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "ngrok": "^4.3.3",
    "prettier": "^3.1.1",
    "pyright": "^1.1.350",
    "ts-prune": "^0.10.3",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "axios": "^1.9.0",
      "uuid": "^11.1.0",
      "typescript": "^5.8.3",
      "eslint": "^8.57.0",
      "@typescript-eslint/eslint-plugin": "^6.15.0",
      "@typescript-eslint/parser": "^6.15.0",
      "@types/jest": "^29.5.14",
      "@bull-board/ui": "^5.23.0",
      "node-fetch": "^2.6.11",
      "glob": "^11.0.0",
      "rimraf": "^6.0.0",
      "request": "false"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "react-native-windows",
        "@types/react-native",
        "@bull-board/ui",
        "@fastify/static"
      ],
      "allowedVersions": {
        "react": "18 || 19",
        "react-native": "0.79",
        "@nestjs/common": "8 || 9 || 10 || 11",
        "@nestjs/core": "8 || 9 || 10 || 11",
        "@fastify/static": "6 || 7 || 8",
        "node-fetch": "2 || 3"
      }
    }
  }
}
